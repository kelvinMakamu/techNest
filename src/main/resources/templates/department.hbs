{{#partial "content"}}
    <div class="row">
        <div class="col-md-3 col-lg-3 col-sm-12 department-form">
                <h4>New Department</h4>
                <hr>
                <form method="post" action="/departments">
                    <div class="row">
                        <div class="col-md-12 col-lg-12 col-sm-12">
                            <div class="form-group">
                                <label>Department Name</label>
                                <input class="form-control" type="text" placeholder="Department Name"
                                       name="name" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-lg-12 col-sm-12">
                            <div class="form-group">
                                <input class="btn btn-success" type="submit" value="Create">
                            </div>
                        </div>
                    </div>
                </form>
        </div>
        <div class="col-md-8 col-lg-8 col-sm-12">
            <h4> Division Departments</h4>
            <hr/>
            <div class="container">
            {{#if departments}}
                <div class="row">
                {{#each departments }}
                    <div class="col-md-3 col-lg-3 col-sm-12 card">
                        <div class="row">
                            <div class="col-md-12 col-lg-12 col-sm-12">
                                <p class="text-center department-name">{{name}}</p>
                            </div>
                            <div class="col-md-12 col-lg-12 col-sm-12">
                                <hr>
                            </div>
                            <div class="col-md-4 col-lg-4 col-sm-12">
                                <a href="/departments/{{id}}/members" class="btn btn-primary btn-sm">View</a>
                            </div>
                            <div class="col-md-8 col-lg-8 col-sm-12">
                                <a href="/departments/{{id}}" class="btn btn-warning btn-sm link-right">Update</a>
                            </div>
                        </div>
                    </div>
                {{/each}}
                </div>
            {{else}}
                <div class="row">
                    <div class="col-md-10 col-md-10 col-sm-12 card">
                        <p class="no-department">No departments available!</p>
                        <p>Please fill in the form on the left to create a new department</p>
                    </div>
                </div>
            {{/if}}
        </div>
        </div>
    </div>
{{/partial}}

{{> layout.hbs}}