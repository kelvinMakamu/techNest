{{#partial "title"}}
    Create Staff and View Available Technology Staff Members
{{/partial}}

{{#partial "content"}}
    {{#if message}}
        <div class="alert alert-success">{{message}}</div>
    {{/if}}
    <div class="row">
        <div class="col-md-3 col-lg-3 col-sm-12 department-form">
            <h4>New Staff</h4>
            <hr>
            <form method="post" action="/staff">
                <div class="row">
                    <div class="col-md-12 col-lg-12 col-sm-12">
                        <div class="form-group">
                            <label>First Name</label>
                            <input class="form-control" type="text" placeholder="First Name"
                                   name="firstName" required>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-lg-12 col-sm-12">
                        <div class="form-group">
                            <label>Last Name</label>
                            <input class="form-control" type="text" placeholder="Last Name"
                                   name="lastName" required>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-lg-12 col-sm-12">
                        <div class="form-group">
                            <label>Select Department</label>
                            <select id="departmentId" name="departmentId" class="form-control">
                                {{#each departments}}
                                    <option value="{{id}}" class="dept-select">{{name}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-lg-12 col-sm-12">
                        <div class="form-group">
                            <input class="btn btn-success" type="submit" value="Add Staff">
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-8 col-lg-8 col-sm-12">
            <h4 class="text-center"> Technology Division Staff Members</h4>
            <hr/>
            <div class="container department-container">
                {{#if members}}
                    <div class="row">
                        {{#each members }}
                            <div class="col-md-5 col-lg-5 col-sm-12 card">
                                <div class="row">
                                    <div class="col-md-12 col-lg-12 col-sm-12">
                                        <p class="text-center department-name">{{firstName}} {{ lastName}}</p>
                                    </div>
                                    <div class="col-md-12 col-lg-12 col-sm-12">
                                        <hr>
                                    </div>
                                    <div class="col-md-4 col-lg-4 col-sm-12">
                                        <a href="/members/{{id}}" class="btn btn-warning btn-sm">Update</a>
                                    </div>
                                    <div class="col-md-4 col-lg-4 col-sm-12">
                                        <a href="/members/{{id}}/delete" class="btn btn-danger btn-sm link-right">Delete</a>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                {{else}}
                    <div class="row">
                        <div class="col-md-10 col-md-10 col-sm-12 card">
                            <p class="no-department">No staff members available!</p>
                            <p>Please fill in the form on the left to create a new staff member</p>
                        </div>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
{{/partial}}

{{> layout.hbs}}